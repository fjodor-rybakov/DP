@{
    ViewData["Title"] = "Text Details";
}

<div>
    <h3>id: @(ViewContext.RouteData.Values["id"])</h3>

    @if (ViewData["error_message"] != null)
    {
        <h3>Error: @(ViewData["error_message"])</h3>
    }
    
    @if (ViewData["relation"] != null && ViewData["region"] != null)
    {
        <h3>Relation: @(ViewData["relation"])</h3>
        
        <h3>Region: @(ViewData["region"])</h3>
    }
</div>

